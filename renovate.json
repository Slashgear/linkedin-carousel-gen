{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "storybook",
      "matchPackagePatterns": ["^@storybook/", "^storybook$"]
    },
    {
      "groupName": "linting",
      "matchPackageNames": ["oxlint", "oxfmt"]
    }
  ],
  "schedule": ["before 9am on monday"]
}
